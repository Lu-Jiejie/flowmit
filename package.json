{
  "name": "flowmit",
  "type": "module",
  "version": "1.0.7",
  "packageManager": "pnpm@9.15.4",
  "description": "Commit like the flow in Git.",
  "author": "Lu-Jiejie <lu-jiejie@outlook.com>",
  "license": "MIT",
  "homepage": "https://github.com/Lu-Jiejie/flowmit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lu-Jiejie/flowmit.git"
  },
  "bugs": "https://github.com/Lu-Jiejie/flowmit/issues",
  "keywords": [
    "git",
    "commit",
    "commit message",
    "cli"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "fm": "./bin/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "lint": "eslint .",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "nr build",
    "prepare": "simple-git-hooks",
    "cli": "esno src/cli.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.17.14",
    "bumpp": "^9.10.1",
    "changelogithub": "^13.12.1",
    "eslint": "^9.18.0",
    "esno": "^4.8.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.1",
    "minimist": "^1.2.8",
    "picocolors": "^1.1.1",
    "prompts-plus": "^3.0.4",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "^3.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
